{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015",
      "scripthost",
      "es2015.promise",
      "es2015.generator",
      "es2015.iterable"
    ],
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "*": [
        "./modules/*",
        "./src/*",
      ]
    },
    "allowJs": false,
    "checkJs": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "modules/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
