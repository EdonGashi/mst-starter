{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es2015",
      "dom"
    ],
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "*": [
        "./modules/*",
        "./src/*",
      ]
    },
    "allowJs": false,
    "checkJs": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "modules/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
